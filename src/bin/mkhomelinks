# git config's
git config --global user.name  "Bob R."
git config --global user.email "robraft@gmail.com"
# git also looks in $VISUAL and $EDITOR environment variables for editor
git config --global core.editor vim
git config --global color.ui auto
git config --global push.default simple

# git convenience aliases...
git config --global alias.co checkout
git config --global alias.br branch
git config --global alias.ci commit
git config --global alias.st status
# git unstage fileA ...
git config --global alias.unstage 'reset HEAD --'
# git last ...
git config --global alias.last 'log -1 HEAD'
# -end-

# make links from ~ to ...src/...
function mylink() {
  cd $HOME
  local ROBRAFT=GitHub/robraft/src
  ln -sfF $ROBRAFT/$1 ./$2
}

mylink myhome/_bob_rc .bash_profile
mylink myhome/_bob_rc .profile

mylink myhome/_gvimrc .gvimrc
mylink myhome/_vimrc  .vimrc

mylink bin bin

cd
ln -sfF Github proj

# vim :set syntax=sh:
